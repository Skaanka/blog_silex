{% extends "layout.html.twig" %}

{% block title %}{{ billet.titre }}{% endblock %}

{% block content %}


<div class="row billetPage">
    <div class="col-xs-12">
        <div class="row titleBillet">
            <span class="col-xs-12">{{ billet.titre }} - {{ billet.datecreation }} </span>
        </div>
        <div class="row contentBilletPage">
            <div class="col-xs-12">
                <img src="{{ app.request.basepath }}/img/profilPicture.jpg" alt="image billet" class="col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-2" />
                <!--<span class="col-xs-12 col-md-10"><?php echo $billet['intro'] ?></span>-->
                <p class="col-xs-12 col-md-10">{{ billet.contenu }}</p>
            </div>
        </div>
    </div>
</div>

<!-- commentaires -->
<div id="commentaires" class="">
    {% for commentaire in commentaires %}
    <div class="col-xs-12 blocCom">
        <div class="col-sm-2">
            <div class="thumbnail">
                <img class="img-responsive" src="{{ app.request.basepath }}/img/profilPicture.jpg" alt="">
            </div><!-- /thumbnail -->
        </div><!-- /col-sm-1 -->

        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>{{ commentaire.auteur.username }} - </strong> <span class="text-muted">le {{ commentaire.datecreation }}</span>
                </div>
                <div class="panel-body">
                    {{ commentaire.contenu }}
                </div><!-- /panel-body -->
            </div><!-- /panel panel-default -->
        </div><!-- /col-sm-5 -->
    </div><!-- /row -->

    {% else %}
    Aucun commentaire...
    {% endfor %}

    <h3>Add a comment (TODO STYLE)</h3>
    {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
        Soon!
    {% else %}
        <a href="{{ path('login') }} ">Log in</a> to add comments.
    {% endif %}
</div><!-- /container -->


{% endblock %}
